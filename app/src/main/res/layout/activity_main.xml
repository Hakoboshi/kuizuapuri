<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <Button
                android:id="@+id/next_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#BEA0FF"
                android:onClick="nextButton"
                android:text="次へ"
                android:textSize="24sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/ans_botton_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFA0A0"
                android:onClick="ansButton1"
                android:text="１"
                android:textSize="24sp" />

            <Button
                android:id="@+id/ans_button_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFA0"
                android:onClick="ansButton2"
                android:text="２"
                android:textSize="24sp" />

            <Button
                android:id="@+id/ans_button_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#A0FFA0"
                android:onClick="ansButton3"
                android:text="３"
                android:textSize="24sp" />

            <Button
                android:id="@+id/ans_button_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#A0FFFF"
                android:onClick="ansButton4"
                android:text="４"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>